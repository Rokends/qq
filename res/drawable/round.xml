<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 背景填充颜色值 -->  
    <solid android:color="#2196f3" />  
      
    <!-- radius值越大，越趋于圆形 -->  
    <corners android:radius="20dip" />  
      
    <!-- 圆角图像内部填充四周的大小 ，将会以此挤压内部布置的view -->  
    <padding  
        android:bottom="5dip"  
        android:left="5dip"  
        android:right="5dip"  
        android:top="5dip" />  

</shape>
